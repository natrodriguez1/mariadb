<div class="container-fluid p-4">
    <h1 class="pb-4">
        <%= title %>
    </h1>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <form action="/fotos/findAllbyRate/view" class="d-flex" method="GET">
                <input class="form-control me-2" name="lower" type="text" placeholder="Inicio" aria-label="Search">
                <input class="form-control me-2" name="higher" type="text" placeholder="Fin" aria-label="Search">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
      </nav>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Descripción</th>
                <th>Ruta</th>
                <th>Fecha de creación</th>
                <th>Etiqueta(s)</th>
            </tr>
        </thead>
        <tbody>
            <% arrFotos.forEach((foto)=> { %>
                <tr>
                    <td>
                        <%= foto.id %>
                    </td>
                    <td>
                        <%= foto.titulo %>
                    </td>
                    <td>
                        <%= foto.descripcion %>
                    </td>
                    <td>
                        <%= foto.ruta %>
                    </td>
                    <td>
                        <%= foto.createdAt.toLocaleDateString('en-US') %>
                    </td>
                    <td>
                        <% foto.etiqueta.forEach((etiqueta)=> { %>
                            <%= etiqueta.texto %>
                        <% }); %>
                    </td>
                    
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>
